                        android:layout_column="6"
                        android:layout_margin="1dp"
                        android:background="@color/white"
                        android:orientation="vertical">


                        <ImageView
                            android:id="@+id/day_and_time_IMG_friday_mid_day"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="40dp"
                            android:src="@drawable/tennis_ball" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/day_and_time_LAY_saturday_mid_day"
                        android:layout_width="20dp"
                        android:layout_height="match_parent"
                        android:layout_column="7"
                        android:layout_margin="1dp"
                        android:background="@color/white"
                        android:orientation="vertical">


                        <ImageView
                            android:id="@+id/day_and_time_IMG_saturday_mid_day"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="40dp"
                            android:src="@drawable/tennis_ball" />

                    </LinearLayout>
                </TableRow>


                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="#37000000">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_column="0"
                        android:layout_margin="1dp"
                        android:background="@color/white"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="32dp"
                            android:src="@drawable/sunset" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_marginTop="8dp"
                            android:gravity="center|bottom"
                            android:text="Evening\n 17:00 - 22:00"
                            android:textColor="@color/black"
                            android:textSize="13.5sp"
                            android:textStyle="bold" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/day_and_time_LAY_sunday_evening"
                        android:layout_width="20dp"
                        android:layout_height="match_parent"
                        android:layout_column="1"
                        android:layout_margin="1dp"
                        android:background="@color/white"
                        android:orientation="vertical">


                        <ImageView
                            android:id="@+id/day_and_time_IMG_sunday_evening"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="40dp"
                            android:src="@drawable/tennis_ball" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/day_and_time_LAY_monday_evening"
                        android:layout_width="20dp"
                        android:layout_height="match_parent"
                        android:layout_column="2"
                        android:layout_margin="1dp"
                        android:background="@color/white"
                        android:orientation="vertical">


                        <ImageView
                            android:id="@+id/day_and_time_IMG_monday_evening"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_gravity="center"
