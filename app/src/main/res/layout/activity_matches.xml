<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MatchesActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3.5"
            android:orientation="horizontal">


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/matches_BTN_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="120dp"
                android:layout_marginTop="56dp"
                android:background="@drawable/left_rounded_button"
                android:text="Profile"
                android:textAllCaps="false"
                android:textColor="#0844a4" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/matches_BTN_matches"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="56dp"
                android:background="@drawable/right_rounded_button"
                android:backgroundTint="#0844a4"
                android:text="Matches"
                android:textAllCaps="false"
                android:textColor="#FFFFFF" />

        </LinearLayout>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/matches_RCV_matches"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" />


    </LinearLayout>

</RelativeLayout>