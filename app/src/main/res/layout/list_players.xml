<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_margin="8dp"
    android:elevation="6dp"
    android:layoutDirection="ltr"
    app:cardCornerRadius="20dp"
    app:cardElevation="6dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/player_IMG_image"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:layout_marginStart="16dp"
            android:foreground="@drawable/rounded_fg"
            android:src="@drawable/ic_user" />

        <TextView
            android:id="@+id/player_LBL_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@+id/player_IMG_image"
            android:maxLines="1"
            android:text="Gandalf The Grey"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="32sp"
            android:textStyle="bold" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/player_LBL_courts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/player_LBL_name"
            android:layout_margin="8dp"
            android:layout_toEndOf="@id/player_IMG_image"
            android:lineSpacingExtra="8dp"
            android:text="Kiryat Ono Tennis Center\nTennis club Ramat Gan\nShoham Sport Club"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="16sp" />

    </RelativeLayout>


</com.google.android.material.card.MaterialCardView>