<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layoutDirection="ltr">


    <TextView
        android:id="@+id/court_LBL_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Hadar Yosef Tennis Center"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/court_LBL_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/court_LBL_name"
        android:text="Bekhor Shalom Shitrit St 2, Tel Aviv-Yafo, Israel"
        android:textColor="#A6212121"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/court_IMG_checkmark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_tick" />

</RelativeLayout>